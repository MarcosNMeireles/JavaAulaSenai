package Atividades;

import java.util.Scanner;

public class Media {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
	Scanner leia = new Scanner (System.in);
		
		double numero[] = {1,2,3,4},media; 
		int	cont = 1;
		
		if (cont < 5) {
			else if{
				System.out.println("Senhor usuário digite a " +cont); //, "º nota:");
				numero[(cont-1)] = leia.nextDouble();
				media = media + numero[(cont-1)];
			}
			else {
				
				media = (media/4);
				System.out.println("A media é: "+media);
			}
				
		}
				
		
		
		
		 leia.close();
	}

}
